datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Bot {
  balance     Float?
  createdAt   DateTime @default(now())
  gamesLost   Int?
  gamesPlayed Int?
  gamesWon    Int?
  id          String   @id @default(cuid())
  isPlaying   Boolean?
  updatedAt   DateTime @updatedAt
}

model Transaction {
  amount    Float?
  createdAt DateTime                  @default(now())
  id        String                    @id @default(cuid())
  status    EnumTransactionStatus?
  typeField EnumTransactionTypeField?
  updatedAt DateTime                  @updatedAt
  user      User?                     @relation(fields: [userId], references: [id])
  userId    String?
}

model Game {
  betAmount Float?
  createdAt DateTime        @default(now())
  id        String          @id @default(cuid())
  opponent  String?
  status    EnumGameStatus?
  updatedAt DateTime        @updatedAt
  winner    String?
}

model User {
  balance      Float?
  createdAt    DateTime      @default(now())
  email        String?       @unique
  firstName    String?
  games        Int?
  id           String        @id @default(cuid())
  isPlaying    Boolean?
  lastName     String?
  lossMoney    Float?
  losses       Int?
  password     String
  roles        Json
  telegramId   String?
  transactions Transaction[]
  updatedAt    DateTime      @updatedAt
  username     String        @unique
  winMoney     Float?
  wins         Int?
}

enum EnumTransactionStatus {
  Option1
}

enum EnumTransactionTypeField {
  Option1
}

enum EnumGameStatus {
  Option1
}
